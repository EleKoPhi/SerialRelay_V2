#include <Arduino.h>
#include <SPI.h>
#include <time.h>

const int size = 8;
byte serialBuffer[size] = {0};
int returnLenght;
uint8_t mode;

uint8_t startIdentifier = 0x0F;
uint8_t endIdentfier = 0xF0;

void setup()
{
  Serial.begin(115200);
  Serial.setTimeout(1);
  while(Serial.available()){Serial.read();}
}

void loop() {

  if (Serial.available() >= size) {
    int rlen = Serial.readBytes(serialBuffer, size);

    for(int i = 0; i < rlen; i++)
      Serial.write(serialBuffer[i]);
  }
}